}
.topic-img {
  width: 600rpx;
  height: 300rpx;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
}
.topic-item-info {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  font-size: 13px;
  color: #515151;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.topic-item-price {
  font-size: 20px;
  color: #ed4040;
}
.topic-item-sub-title {
  font-size: 12px;
  color: #999999;
  padding-left: 20rpx;
}

/*到底提示*/
.bottom-tip {
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #707070;
  font-size: 12px;
}



